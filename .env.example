SECRET_KEY=dev-secret
# SQLite default for local dev
# Use a relative path by default. If you hit
# "sqlite3.OperationalError: unable to open database file",
# switch to an absolute path as shown below.
DATABASE_URL=sqlite:///instance/app.db
# Absolute path example (uncomment and adjust if needed):
# DATABASE_URL=sqlite:////absolute/path/to/your/project/instance/app.db
FLASK_APP=app.py
SESSION_COOKIE_SECURE=false
REMEMBER_COOKIE_SECURE=false
# Rate limiting storage (use Redis in production)
# RATELIMIT_STORAGE_URI=redis://localhost:6379/0
# Example upload size limit in MB
# MAX_UPLOAD_MB=20

